<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="@dimen/dimen_8dp"
	android:orientation="vertical"
	android:padding="@dimen/dimen_8dp">

	<!-- Top App Name Image. -->
	<ImageView
		android:id="@+id/imageView"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/dimen_44dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="@dimen/dimen_32dp"
		android:adjustViewBounds="true"
		android:contentDescription="@null"
		android:src="@drawable/img_validate_credentials_app_name" />

	<!-- Country Selector and Phone Number Edit Box. -->
	<com.matias.cogui.common.views.CountryPhoneSelectorView
		android:id="@+id/v_country_phone_selector"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/dimen_16dp"
		android:layout_marginTop="@dimen/dimen_40dp"
		android:layout_marginEnd="@dimen/dimen_16dp" />

	<!-- Agreement. -->
	<com.matias.cogui.common.views.AgreementView
		android:id="@+id/agreement_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/dimen_16dp"
		android:layout_marginEnd="@dimen/dimen_16dp"
		android:visibility="gone"
		tools:visibility="visible" />

	<!-- Get Started Button -->
	<Button
		android:id="@+id/btn_get_started"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_46dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginStart="@dimen/dimen_16dp"
		android:layout_marginTop="@dimen/dimen_16dp"
		android:layout_marginEnd="@dimen/dimen_16dp"
		android:background="@drawable/btn_ok_ripple_bgr"
		android:paddingStart="@dimen/dimen_48dp"
		android:paddingEnd="@dimen/dimen_48dp"
		android:text="Get Started"
		android:textAllCaps="false"
		android:textColor="@color/color_white"
		android:textSize="@dimen/text_20sp"
		android:visibility="gone"
		tools:visibility="visible" />
</LinearLayout>